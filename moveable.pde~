Class Moveable {

  void move(int goal, int time) {

    startFrame = frameCount;
    lastFrame = frameCount;
    endFrame = startFrame + time;

    direction = goal - pos;

  }

  void step(int cur) {
    
    if (cur <= endFrame) {

        float pct = float((cur - lastFrame))/float((endFrame-startFrame));
        pos += pct * direction;
        lastFrame = cur;

    }

  }

}
